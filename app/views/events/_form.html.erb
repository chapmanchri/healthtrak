<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div>
<h4>Patient: <i><%= current_user.patient_name  %></i> </h4>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :eventdate, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :entry %><br>
    <%= f.text_field :event, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="field">
    <%= f.hidden_field :user_id, class: "form-control" %>

  </div>
</div>

  <div class="actions">
    <%= f.submit 'Save', :class => 'btn btn-success'%>
  </div>
<% end %>
