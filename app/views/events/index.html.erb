<p id="notice"><%= notice %></p>

<div class="jumbotron">
<h1>HealthTraks</h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th style=color:#778899; >Date</th>
      <th>Event</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.eventdate.strftime('%a %m/%d/%Y'), event %></td>
		<td><%= event.event %></td>
        <td><%= event.notes %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ New Event', new_event_path, html_options={class: "btn btn-success"} %>
