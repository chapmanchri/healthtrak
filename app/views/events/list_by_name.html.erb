<p id="notice"><%= notice %></p>

<div class="jumbotron">
	<h1>HealthTraks<br><small><i>for <%= @user.patient_name  %></i></small></h1>

</div>

<div class="event_button">
		<%= link_to '+ New Entry', new_event_path, html_options={class: "btn btn-success"} %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Event</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.eventdate.strftime('%a %m/%d/%Y'), event %></td>
    <td><%= event.event %></td>
        <td><%= event.notes.truncate(30) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
