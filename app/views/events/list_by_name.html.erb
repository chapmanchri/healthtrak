<p id="notice"><%= notice %></p>

<div class="">
	<h4>HealthTraks (beta)<br><small><i>for <%= current_user.patient_name  %></i></small></h4>
</div>

<div class="event_button">
		<%= link_to '+ New Entry', new_event_path, html_options={class: "btn btn-success"} %>
		<%= link_to 'Calendar View', events_calendar_month_path, html_options={class: "btn btn-info"} %>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Entry</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.eventdate.strftime('%a %m/%d/%Y'), edit_event_path(event.id) %></td>
    <td><%= event.event %></td>
        <td><%= event.notes.truncate(40) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
