<div class="page-header">
  <h3>HealthTraks  (beta)<br><small><i>Edit Your Info</i></small></h4>

</div>
<%= link_to 'Cancel', @user, class: "btn btn-warning" %>
<%= link_to 'Login', login_path, class: "btn btn-primary" %>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="field">
      <%= f.label :Your_Email %><br>
      <%= f.text_field :email, class: "form-control"  %>
    </div>
  </div>
  <div class="form-group">
    <div class="field">
      <%= f.label :Choose_your_password %> (at least 6 characters)<br>
      <%= f.password_field :password, class: "form-control"  %>
    </div>
  </div>

	<div class="form-group">
		<div class="field">
			<%= f.label :password_confirmation, "Confirm your password" %>
			<%= f.password_field :password_confirmation, class: "form-control" %>
		</div>
	</div>

  <div class="form-group">
    <div class="field">
      <%= f.label :patient_name, "Who or what you are tracking" %> (optional)<br>
      <%= f.text_field :patient_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <p><%= f.check_box :acceptance %> <strong>I agree</strong> to the <i>HealthTraks</i> <%= link_to ' Terms of Service', '/static_pages/terms', html_options = { target: "_blank"} %> and <%= link_to ' Privacy Policy', '/static_pages/privacy', html_options = { target: "_blank"} %></p>
    </div>
  </div>

    <div class="actions">
      <%= f.submit 'Make change', :class => 'btn btn-success'%>
    </div>
<% end %>
