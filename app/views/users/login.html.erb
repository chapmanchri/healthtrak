<div class="jumbotron">
	<h1>HealthTraks<br><small><i>Please Login Below</i></small></h1>
	<h2>or <%= link_to 'Create Account', signup_path, class: "btn btn-primary" %></h2>
</div>

<%= form_tag("/login") do %>

<% if !@errors.empty? %>
  <div id="error_explanation">
    <h2><%= @errors %></h2>
  </div>
<% end %>

  <div class="form-group">
    <%= label_tag(:email, "Email:") %>
    <input id="email" name="email" type="text" class="form-control"/>
  </div>

  <div class="form-group">
    <%= label_tag(:password, "Password:") %>
    <input id="password" name="password" type="password" class="form-control" />
  </div>

  <div class="form-group">
    <input class="btn btn-success" name="commit" type="submit" value="Login" />
  </div>

<% end %>
